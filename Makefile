SRC=		main.c			\
			swap.c			\
			ss.c			\
			push.c			\
			rotate.c		\
			rr.c			\
			r_rotate.c		\
			rrr.c			\
			quick_sort.c


HEADFILES=	push_swap.h

OBJ=		${SRC:.c=.o}

NAME=		push_swap

CC=			cc

CFLAGS=		-Wall -Wextra -Werror

%.o:		%.c ${HEADFILES}
			${CC} ${CFLAGS} -c $< -o $@

${NAME}:	lib ${OBJ} ${HEADFILES}
			${CC} ${OBJ} -o $(NAME)

all:		${NAME}

lib:
			make -C Libft

clean:
			rm -f ${OBJ}
			make clean --directory=Libft

fclean:		clean
			rm -f ${NAME}
			make fclean --directory=Libft

re:			fclean all

.PHONY:		clean

shrek:
	@tput setaf 2
