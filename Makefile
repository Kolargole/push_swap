SRC=		main.c				\
			swap.c				\
			ss.c				\
			push.c				\
			rotate.c			\
			rr.c				\
			r_rotate.c			\
			rrr.c				\
			insertion_sort.c	\
			merge.c				\
			is_sorted.c


HEADFILES=	push_swap.h

OBJ=		${SRC:.c=.o}

NAME=		push_swap

CC=			cc

CFLAGS=		-Wall -Wextra -Werror

%.o:		%.c ${HEADFILES}
			${CC} ${CFLAGS} -c $< -o $@

${NAME}:	${OBJ} ${HEADFILES}
			make -C Libft
			ln -sf Libft/libft.a
			${CC} ${OBJ} libft.a -o ${NAME}

all:		${NAME}

clean:
			rm -f ${OBJ}
			make clean --directory=Libft

fclean:		clean
			rm -f ${NAME}
			make fclean --directory=Libft
			rm -f libft.a

re:			fclean all

.PHONY:		clean

shrek:
