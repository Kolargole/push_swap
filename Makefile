SRC=		main.c			\
			error_check.c	\
			swap.c			\
			ss.c			\
			pa.c			\
			pb.c			\
			rotate.c		\
			rr.c			\
			rra.c			\
			rrb.c			\
			rrr.c


HEADFILES=	push_swap.h

OBJ=		${SRC:.c=.o}

NAME=		push_swap

CC=			cc

CFLAGS=		-Wall -Wextra -Werror

%.o:		%.c ${HEADFILES}
			${CC} ${CFLAGS} -c $< -o $@

${NAME}:	${OBJ} ${HEADFILES}
			${CC} ${OBJ} -o $(NAME)

all:		${NAME}

clean:
			rm -f ${OBJ}

fclean:		clean
			rm -f ${NAME}

re:			fclean all

.PHONY:		clean

shrek:
